<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <FrameLayout
        android:id="@+id/fragmentContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/rg"
        />

    <RadioGroup
        android:id="@+id/rg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:checkedButton="@+id/rbHome"
        android:orientation="horizontal"
        android:padding="6dp"
        android:layout_marginTop="0.1dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <RadioButton
            android:id="@+id/rbHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/btn_tabbar_home_selector"
            android:gravity="center"
            android:checked="false"
            android:text="首页"
            android:textColor="@color/btn_tabbar_text_selector"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/rbFoucs"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/btn_tabbar_focus_selector"
            android:gravity="center"
            android:text="关注"
            android:textColor="@color/btn_tabbar_text_selector"
            android:textSize="12sp" />
        <RadioButton
            android:id="@+id/rbLivespecial"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/btn_tabbar_livespecial_selector"
            android:gravity="center"
            android:text="直播专场"
            android:textColor="@color/btn_tabbar_text_selector"
            android:textSize="12sp" />
        <RadioButton
            android:id="@+id/rbMessage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/btn_tabbar_message_selector"
            android:gravity="center"
            android:text="消息"
            android:textColor="@color/btn_tabbar_text_selector"
            android:textSize="12sp" />
        <RadioButton
            android:id="@+id/rbMe"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/btn_tabbar_me_selector"
            android:gravity="center"
            android:text="我的"
            android:textColor="@color/btn_tabbar_text_selector"
            android:textSize="12sp" />
    </RadioGroup>

</android.support.constraint.ConstraintLayout>
